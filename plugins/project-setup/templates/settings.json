{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-commit-check.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/edit-monitor.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(build:*)",
      "Bash(test:*)",
      "Bash(lint:*)",
      "Bash(typecheck:*)",
      "Bash(format:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(ls:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(*>.env:*)",
      "Bash(*>>.env:*)"
    ]
  }
}
